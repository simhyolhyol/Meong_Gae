<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="top">

            <TextView
                android:id="@+id/cd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 수강권이 없습니다."
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cd_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cd_title"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:text="20 / 30 회 남음" />

            <TextView
                android:id="@+id/cd_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cd_count"
                android:layout_marginTop="3dp"
                android:textSize="15sp"
                tools:text="2020. 05 19 ~ 2020. 07. 19"
                android:textColor="@color/white" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>