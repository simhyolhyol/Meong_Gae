    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.meong_gae.ui.home.HomeFragment"
        android:label="@string/title_ticket"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_reserve"
        android:name="com.example.meong_gae.ui.reserve.ReserveFragment"
        android:label="@string/title_reservation"
        tools:layout="@layout/fragment_reserve" />

    <fragment
        android:id="@+id/navigation_mypage"
        android:name="com.example.meong_gae.ui.mypage.MypageFragment"
        android:label="@string/title_mypage"
        tools:layout="@layout/fragment_mypage" />

    <fragment
        android:id="@+id/navigation_board"
